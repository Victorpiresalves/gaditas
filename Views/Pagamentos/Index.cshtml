@model IEnumerable<Gaditas.Models.PagamentoViewModel>

@{
    ViewData["Title"] = "Lista de Pagamentos";
}

<h1>Lista de Pagamentos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DESCRICAO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VALOR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NUM_PARCELA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTD_TOTAL_PARCELA)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.DT_VENCIMENTO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DT_CADASTRO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DT_ATUALIZACAO)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(x=>x.DESCRICAO).OrderBy(x=>x.DT_VENCIMENTO).ToList()) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRICAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VALOR)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(modelItem => item.NUM_PARCELA)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(modelItem => item.QTD_TOTAL_PARCELA)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(modelItem => item.DT_VENCIMENTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DT_CADASTRO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DT_ATUALIZACAO)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Pagamentos" asp-route-id="@item.ID">Editar</a> |
                <a asp-action="Details" asp-controller="Pagamentos" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-action="Delete" asp-controller="Pagamentos" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model Gaditas.Models.PlanoAlunoViewModel

@{
    ViewData["Title"] = "Incluir Novo Plano";
}

<h1>Incluir Novo Plano</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ID_ALUNO" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="ID_PLANO" class="control-label"></label>

                <select asp-for="ID_PLANO"
                        asp-items="@Model.ListaPlanos" class="form-control"></select>

                <span asp-validation-for="ID_PLANO" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="DT_INICIO" class="control-label"></label>
                <input asp-for="DT_INICIO" class="form-control" />
                <span asp-validation-for="DT_INICIO" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


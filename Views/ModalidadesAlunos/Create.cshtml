@model Gaditas.Models.ModalidadeAlunoViewModel

@{
    ViewData["Title"] = "Incluir Nova Modalidade";


}
<div>
    <a href "#" id="voltar">Voltar</a>
</div>


@if(Model.ListaModalidades.Any())
{
    <h1>Incluir Nova Modalidade</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="ID_ALUNO" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="ID_MODALIDADE" class="control-label"></label>

                    <select asp-for="ID_MODALIDADE"
                            asp-items="@Model.ListaModalidades" class="form-control"></select>

                    <span asp-validation-for="ID_MODALIDADE" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>Não há modalidades ativa, para verificar <a asp-action="Index" asp-controller="Modalidades">clique aqui</a>.</h4>
}
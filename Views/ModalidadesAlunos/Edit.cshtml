@model Gaditas.Models.ModalidadeAlunoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Modalidade do ALuno</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ID_ALUNO" class="control-label"></label>
                <input asp-for="ID_ALUNO" class="form-control" />
                <span asp-validation-for="ID_ALUNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_MODALIDADE" class="control-label"></label>
                <input asp-for="ID_MODALIDADE" class="form-control" />
                <span asp-validation-for="ID_MODALIDADE" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

